<form action="/bookmarks/<%= @bookmark.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH" />
  <input type="text" name="url" value="<%= @bookmark.url %>" placeholder = "URL" />
  <input type="text" name="title" value="<%= @bookmark.title %>" placeholder="Title"/>
  <input type="submit" value="Submit" />
</form>
